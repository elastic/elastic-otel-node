{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",

    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts"
  ]
}
